<div class="search-bar">
  <%= form_tag dwarves_path, method: :get do %>
    <div class="search">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a dwarf"
      %>
       <%= submit_tag "Search", class: "btn" %>
     </div>
  <% end %>
</div>
<br>
<div class="teuks">
