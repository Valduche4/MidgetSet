<%# <%= render: "form", dwarf: @dwarf %>
<div class="form-new">
    <div class="banner-new">
      <h1>Add a new dwarf</h1>
    </div>
    <%= simple_form_for(@dwarf) do |f| %>
    <div class="form-input-new">
      <%= f.input :name %>
      <%= f.input :sexe, as: :select, collection: %w(male female non-binary) %>
      <%= f.input :origin %>
      <%= f.input :age %>
      <%= f.input :size %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.association :jobs, as: :check_boxes, collection: Job.all %>
      <div class="button-submit-new">
        <button><%= f.button :submit, "submit" %></button>
      </div>
    </div>
    <% end %>
</div>
